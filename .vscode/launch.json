{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ROOT Debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "/opt/homebrew/bin/root.exe",
            "args": [
                "-l",
                "-q",
                "${file}+g"
            ],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "postDebugTask": "Python post-launch",
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
              ]
        },
    ]
}